generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String        @id @default(uuid())
  fullName          String
  userName          String        @unique
  password          String
  isEnabled         Boolean       @default(true)
  tg_handle         String?
  tg_id             String?
  last_login        DateTime?
  last_logout       DateTime?
  role              Role
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdBy         String?
  vendor_code       String?
  code              String[]
  merchantAdminCode String?
  accessTokens      AccessToken[]
}

model AccessToken {
  id          String   @id @default(uuid())
  accessToken String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
}

model Merchant {
  id                String          @id @default(uuid())
  code              String          @unique
  parent_id         Int?
  payin_theme       String?
  notes             String?
  site_url          String
  api_key           String          @unique
  secret_key        String          @unique
  notify_url        String?
  return_url        String
  min_payin         String
  max_payin         String
  payin_commission  Decimal
  min_payout        String
  max_payout        String
  payout_commission Decimal
  payout_notify_url String?
  is_test_mode      Boolean         @default(false)
  is_enabled        Boolean         @default(true)
  is_demo           Boolean         @default(false)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  balance           Decimal?
  createdBy         String?
  is_deleted        Boolean         @default(false)
  child_code        String[]
  is_merchant_Admin Boolean         @default(false)
  public_api_key    String          @unique
  dispute_enabled   Boolean         @default(true)
  allow_intent      Boolean?        @default(false)
  Lien              Lien[]
  Merchant_Bank     Merchant_Bank[]
  Payin             Payin[]
  Payout            Payout[]
  Settlement        Settlement[]
}

model BankAccount {
  id            String          @id @default(uuid())
  upi_id        String
  upi_params    String?
  name          String
  ac_no         String
  ac_name       String
  ifsc          String
  bank_name     String
  is_qr         Boolean         @default(true)
  is_bank       Boolean         @default(true)
  min_payin     Decimal
  max_payin     Decimal
  is_enabled    Boolean         @default(true)
  payin_count   Int
  balance       Decimal
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  createdBy     String?
  code          String?
  vendor_code   String?
  bank_used_for String?         @default("")
  allow_intent  Boolean?        @default(false)
  Merchant_Bank Merchant_Bank[]
}

model Merchant_Bank {
  id            String      @id @default(uuid())
  merchantId    String
  bankAccountId String
  bankAccount   BankAccount @relation(fields: [bankAccountId], references: [id])
  merchant      Merchant    @relation(fields: [merchantId], references: [id])

  @@unique([merchantId, bankAccountId])
}

model Payin {
  id                   String    @id @default(uuid())
  upi_short_code       String
  qr_params            String?
  amount               Decimal
  status               Status
  is_notified          Boolean   @default(false)
  user_submitted_utr   String?
  currency             Currency
  merchant_order_id    String
  user_id              String
  bank_acc_id          String?
  payin_commission     Decimal?
  return_url           String
  notify_url           String
  user_submitted_image String?
  approved_at          DateTime?
  merchant_id          String
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  utr                  String?
  duration             String?
  is_url_expires       Boolean   @default(false)
  expirationDate       Int?
  confirmed            Decimal?
  sno                  Int       @default(autoincrement())
  bank_name            String?
  one_time_used        Boolean   @default(false)
  to_bank              String?   @default("")
  user_ip              Decimal?
  method               String?
  Merchant             Merchant  @relation(fields: [merchant_id], references: [id])
}

model Payout {
  id                String    @id @default(uuid())
  user_id           String
  amount            Decimal
  status            Status
  failed_reason     String?
  currency          Currency
  merchant_id       String
  banck_account_id  String?
  merchant_order_id String
  acc_no            String
  acc_holder_name   String
  ifsc_code         String
  bank_name         String?
  upi_id            String?
  utr_id            String?
  notify_url        String?
  rejected_reason   String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  sno               Int       @default(autoincrement())
  payout_commision  Decimal
  vendor_code       String?
  from_bank         String?   @default("")
  approved_at       DateTime?
  rejected_at       DateTime?
  method            String?
  Merchant          Merchant  @relation(fields: [merchant_id], references: [id])
}

model Settlement {
  merchant_id     String
  status          Status
  amount          Decimal
  method          Method
  acc_name        String?
  acc_no          String?
  ifsc            String?
  refrence_id     String?
  rejected_reason String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  id              Int      @id @default(autoincrement())
  createdBy       String?
  vendor_code     String?
  wallet          String?
  wallet_address  String?
  Merchant        Merchant @relation(fields: [merchant_id], references: [id])
}

model TelegramResponse {
  id          String   @id @default(uuid())
  status      String?
  amount      Decimal?
  amount_code String?
  utr         String?
  is_used     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sno         Int      @default(autoincrement())
  bankName    String?
}

model Vendor {
  id                Int                @id @default(autoincrement())
  vendor_code       String?            @unique
  vendor_commission String?
  balance           String?
  createdBy         String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  VendorSettlement  VendorSettlement[]
}

model VendorSettlement {
  id              Int      @id @default(autoincrement())
  vendor_id       Int
  status          Status
  amount          Decimal
  method          Method
  acc_name        String?
  acc_no          String?
  ifsc            String?
  refrence_id     String?
  rejected_reason String?
  createdBy       String?
  vendor_code     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  wallet          String?
  wallet_address  String?
  Vendor          Vendor   @relation(fields: [vendor_id], references: [id])
}

model Lien {
  id                String   @id @default(uuid())
  merchant_id       String
  merchant_order_id String
  user_id           String
  amount            Decimal
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  sno               Int      @default(autoincrement())
  when              DateTime
  Merchant          Merchant @relation(fields: [merchant_id], references: [id])
}

enum Role {
  ADMIN
  CUSTOMER_SERVICE
  TRANSACTIONS
  OPERATIONS
  MERCHANT
  VENDOR
  VENDOR_OPERATIONS
  MERCHANT_OPERATIONS
  MERCHANT_ADMIN
}

enum Status {
  ASSIGNED
  SUCCESS
  DROPPED
  DUPLICATE
  INITIATED
  DISPUTE
  REVERSED
  IMG_PENDING
  PENDING
  REJECTED
  TEST_SUCCESS
  TEST_DROPPED
  BANK_MISMATCH
  FAILED
}

enum Currency {
  INR
}

enum Method {
  BANK
  CASH
  AED
  CRYPTO
}
